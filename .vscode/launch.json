{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Flask Run (uv)",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/.venv/bin/flask",
            "args": [
                "run"
            ],
            "env": {
                "FLASK_APP": "app.py",
                "FLASK_ENV": "development",
                "FLASK_DEBUG": "1"
            },
            "console": "integratedTerminal",
            "jinja": true,
            "justMyCode": true
        },
    ]
}